<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <classPathEntry location="${project.basedir}/lib/mariadb-java-client-2.7.5.jar"/>

    <context id="MySQL">
        <!-- 数据库连接 -->
        <jdbcConnection driverClass="org.mariadb.jdbc.Driver"
                        connectionURL="jdbc:mariadb://localhost:3306"
                        userId="root" password="root" />

        <!-- 是否生成注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>


        <!-- 生成的包名和工程名 -->
        <javaModelGenerator targetPackage="net.renfei.uaa.repositories.entity"
                            targetProject="src/main/java"/>
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources" />
        <javaClientGenerator targetPackage="net.renfei.uaa.repositories"
                             targetProject="src/main/java" type="XMLMAPPER" />

        <!-- 数据库表 -->
        <table schema="renfeid" tableName="demo" />
    </context>
</generatorConfiguration>